{
  "name": "welovemovies",
  "private": true,
  "workspaces": [
    "front-end",
    "back-end"
  ],
  "scripts": {
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "npm run start --workspace=front-end",
    "start:backend": "npm run start --workspace=back-end",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "type-check": "npm run type-check --workspaces",
    "type-check:watch": "npm run type-check:watch --workspaces",
    "migrate": "ts-node ./src/knexfile.ts && knex migrate:latest --knexfile ./src/knexfile.ts",
    "migrate:dev": "cross-env NODE_ENV=development ts-node ./src/knexfile.ts && cross-env NODE_ENV=development knex migrate:latest --knexfile ./src/knexfile.ts"
  },
  "devDependencies": {
    "@testing-library/user-event": "^12.2.0",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/parser": "^8.12.2",
    "concurrently": "^8.2.2",
    "knex": "3.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^5.0.1",
    "ts-jest": "^29.2.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
